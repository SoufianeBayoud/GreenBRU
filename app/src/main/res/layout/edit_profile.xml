<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#3F51B5"
    tools:context=".EditProfileActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/username_update"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        android:layout_marginBottom="26dp"
        android:paddingLeft="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:id="@+id/first_name_update"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        android:layout_marginBottom="26dp"
        android:paddingLeft="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:id="@+id/last_name_update"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        android:layout_marginBottom="26dp"
        android:paddingLeft="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/password_update"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        android:layout_marginBottom="26dp"
        android:paddingLeft="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:id="@+id/email_update"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_picture_edit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/round_white_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="+ADD Profile picture"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/update_btn_editprofile"
        android:text="Update"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/mapbox_blue"
        android:layout_marginBottom="10dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/go_back_to_map"
        android:text="Go back to map"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/mapbox_blue"
        android:layout_marginBottom="10dp"

        />




</LinearLayout>