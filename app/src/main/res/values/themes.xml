<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenBRU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <!--Light Mode -->
    <style name="lightModeSwitch">
        <item name="android:background">#9CF8EEDE</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#A66969</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@color/mapbox_blue</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Night Mode-->
    <style name="DarkModeSwitch">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TEXT_NIGHT">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BUTTON_DARK">
        <item name="android:background">@color/night_mode</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.GreenBRU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GreenBRU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GreenBRU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>