<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/menuMap">

    <fragment
        android:id="@+id/menuMap"
        android:name="com.example.greenbru.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/menuProfile"
        android:name="com.example.greenbru.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/menuOrders"
        android:name="com.example.greenbru.recfragment"
        android:label="List of Signals"
        tools:layout="@layout/fragment_recfragment"/>
    <fragment
        android:id="@+id/menuSettings"
        android:name="com.example.greenbru.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/github"
        android:name="com.example.greenbru.GithubFragment"
        android:label="Github"
        tools:layout="@layout/fragment_github" />
    <fragment
        android:id="@+id/menuSupport"
        android:name="com.example.greenbru.SupportFragment"
        android:label="Support"
        tools:layout="@layout/fragment_support" />
    <fragment
        android:id="@+id/menuAboutUs"
        android:name="com.example.greenbru.AboutUsFragment"
        android:label="AboutUs"
        tools:layout="@layout/fragment_about_us" />
    <action
        android:id="@+id/action_menuProfile"
        app:destination="@id/menuProfile" />
    <action
        android:id="@+id/action_menuSettings"
        app:destination="@id/menuSettings" />
    <fragment
        android:id="@+id/menuNotifications"
        android:name="com.example.greenbru.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />


</navigation>